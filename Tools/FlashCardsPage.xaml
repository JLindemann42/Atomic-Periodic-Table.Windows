<Page
    x:Class="Atomic_PeriodicTable.Tables.FlashCardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Atomic_PeriodicTable.Tables"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Border MaxWidth="1854" HorizontalAlignment="Center">
            <Grid Background="Transparent">
                <Border Width="1854"/>
                <!-- Single-column: whole page scrollable -->
                <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <Grid
                        x:Name="CardsGrid_SingleColumn"
                        VerticalAlignment="Top"
                        Margin="0,32,0,0"
                        MaxWidth="1854"
                        Padding="54,0,24,0"
                        HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Left Card (Single Column) -->
                        <Border x:Name="UnitConverterCard_Single"
                                Grid.Row="0"
                                BorderThickness="1"
                                CornerRadius="24"
                                Padding="0,0,0,18"
                                MinWidth="200"
                                MaxWidth="900"
                                HorizontalAlignment="Stretch">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Spacing="16" Margin="0,0,0,0">
                                    <!-- Statistics -->
                                    <Border
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="20"
                                        Padding="20"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        MinWidth="220"
                                        MaxWidth="900"
                                        HorizontalAlignment="Left">
                                        <StackPanel>
                                            <Border Width="900"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE946;" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                                <TextBlock Text="Statistics" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                            </StackPanel>
                                            <Grid Margin="0,16,0,8">
                                                <ProgressBar
                                                    x:Name="xp_progress_bar_single"
                                                    Minimum="0"
                                                    Maximum="100"
                                                    Padding="0,0,72,0"
                                                    Value="0"
                                                    Height="6"
                                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                    Background="{ThemeResource CardStrokeColorDefaultBrush}" />
                                                <TextBlock x:Name="LevelProgressTextBlock_single"
                                                    Text="246/375"
                                                    FontSize="14"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,4,0"/>
                                            </Grid>
                                            <Grid Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock x:Name="LevelTextBlock_single" Text="0" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Level" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                    <TextBlock x:Name="TotalXpTextBlock_single" Text="0" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}" HorizontalAlignment="Center"/>
                                                    <TextBlock x:Name="XpTextBlock_single" Text="Total XP" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                    <TextBlock x:Name="TotalGamesPlayedTextBlock_single" Text="0" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Quiz Completed" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                    <!-- Lives Box -->
                                    <Border
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="20"
                                        x:Name="LivesBox_single"
                                        Padding="20"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        MinWidth="220"
                                        MaxWidth="900"
                                        HorizontalAlignment="Left">
                                        <StackPanel>
                                            <Border Width="900"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xEB51;" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                                <TextBlock Text="Lives" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                            </StackPanel>
                                            <Grid Margin="0,16,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Width="64" Height="64" Grid.Column="0" VerticalAlignment="Center">
                                                    <ProgressRing IsIndeterminate="False" x:Name="LivesProgressBar_single" Width="64" Height="64" IsActive="True" Value="100" Maximum="100"/>
                                                    <TextBlock x:Name="LivesCountTextBlock_single" Text="30" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Grid>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                                    <TextBlock x:Name="NextRefillTextBlock_single" Text="Next +5 in 29:59" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                    <!-- PRO+ Box -->
                                    <Border
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="20"
                                        x:Name="ProPlusBox_single"
                                        Padding="20"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        MinWidth="220"
                                        MaxWidth="900"
                                        HorizontalAlignment="Left">
                                        <StackPanel>
                                            <Border Width="900"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE710;" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                                <TextBlock Text="Get PRO+" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="Unlock the full potential of 'Atomic - Periodic Table' with access to all learning games and unlimited lives."
                                                        FontWeight="Normal"
                                                        Margin="4,4,20,4"
                                                        TextWrapping="Wrap"
                                                        FontSize="14"/>
                                                <Button Content="Get PRO Version"
                                                        Click="OpenProPage_Click"
                                                        CornerRadius="8"
                                                        Margin="0,8,0,0"
                                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                                        HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <!-- Achievements Box -->
                                    <Border
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="20"
                                        Padding="20"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        MinWidth="220"
                                        MaxWidth="900"
                                        MaxHeight="400"
                                        HorizontalAlignment="Left">
                                        <StackPanel>
                                            <Border Width="900"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xF272;" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                                <TextBlock Text="Achievements" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                            </StackPanel>
                                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                                <ItemsControl ItemsSource="{x:Bind Achievements, Mode=OneWay}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="local:Achievement">
                                                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                                    CornerRadius="12"
                                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                    BorderThickness="1"
                                                                    Padding="12"
                                                                    Opacity="{x:Bind DisplayOpacity}"
                                                                    Margin="0,12,0,0">
                                                                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                                                    <FontIcon Glyph="{x:Bind DisplayIcon}" 
                                                                            FontSize="28" 
                                                                            Foreground="{ThemeResource AccentFillColorDefaultBrush}" 
                                                                            VerticalAlignment="Center"/>
                                                                    <StackPanel>
                                                                        <Border Width="600"/>
                                                                        <TextBlock Text="{x:Bind Header}" FontWeight="Bold" FontSize="16"/>
                                                                        <TextBlock Text="{x:Bind Description}" FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                                        <ProgressBar Minimum="0" Maximum="{x:Bind Goal}" Value="{x:Bind Progress}" Height="6" Margin="0,6,0,0" />
                                                                        <TextBlock Text="{x:Bind ProgressText}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,0"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                        <!-- Categories Card (Single Column) -->
                        <Border x:Name="CategoriesCard_Single"
                                Grid.Row="2"
                                Padding="0,0,0,0"
                                MinWidth="200"
                                CornerRadius="0,0,0,0"
                                MaxWidth="900"
                                HorizontalAlignment="Stretch">
                            <Border>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="CategoryGroupsControl_Single" ItemsSource="{x:Bind CategoryGroups, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="local:FlashCardCategoryGroup">
                                                <Border
                                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                    CornerRadius="16"
                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    Padding="20"
                                                    Margin="0,0,0,18">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="0,0,0,12">
                                                            <FontIcon Glyph="{x:Bind Icon}" FontSize="20" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                                                            <TextBlock Text="{x:Bind GroupName}" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                                                            <Border Width="900"/>
                                                        </StackPanel>
                                                        <StackPanel Spacing="8">
                                                            <ItemsControl ItemsSource="{x:Bind Categories}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate x:DataType="local:FlashCardCategory">
                                                                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                                                CornerRadius="16"
                                                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                                BorderThickness="1"
                                                                                Padding="12,8"
                                                                                Margin="0,0,0,8">
                                                                            <Grid>
                                                                                <TextBlock Text="{x:Bind Name}" FontSize="16" VerticalAlignment="Center" />
                                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                                                                                    <Border Background="#FFFA5A36" CornerRadius="8" Padding="8,2" Margin="2"
                                                                                            Visibility="{x:Bind ProBadgeVisibility}">
                                                                                        <TextBlock Text="PRO+" Foreground="White" FontWeight="Bold" FontSize="14" TextAlignment="Center" VerticalAlignment="Center"/>
                                                                                    </Border>
                                                                                    <Button HorizontalAlignment="Right"
                                                                                            VerticalAlignment="Center"
                                                                                            Padding="12,0"
                                                                                            MinWidth="120"
                                                                                            Height="32"
                                                                                            Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                                                            BorderThickness="0"
                                                                                            CornerRadius="6"
                                                                                            FontWeight="SemiBold"
                                                                                            Tag="{x:Bind Name}"
                                                                                            Click="CategoryButton_Click"
                                                                                            IsEnabled="{x:Bind IsUnlocked}">
                                                                                        <TextBlock Text="Start Flashcard >" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                                    </Button>
                                                                                </StackPanel>
                                                                            </Grid>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Border>
                    </Grid>
                </ScrollViewer>
                <!-- Two-column: original layout, not scrollable as a whole -->
                <Grid
                    x:Name="CardsGrid"
                    VerticalAlignment="Top"
                    Margin="0,32,0,0"
                    MaxWidth="1854"
                    Padding="54,0,24,0"
                    HorizontalAlignment="Left"
                    Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- Left Card -->
                    <Border x:Name="UnitConverterCard"
                            Grid.Column="0"
                            BorderThickness="1"
                            CornerRadius="24,24,0,0"
                            Padding="0,0,0,0"
                            MinWidth="200"
                            MaxWidth="900"
                            HorizontalAlignment="Stretch">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="16" Margin="0,0,0,0">
                                <!-- Statistics -->
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="20"
                                    Padding="20"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    MinWidth="220"
                                    MaxWidth="900"
                                    HorizontalAlignment="Left">
                                    <StackPanel>
                                        <Border Width="900"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <FontIcon Glyph="&#xE946;" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                            <TextBlock Text="Statistics" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                        </StackPanel>
                                        <Grid Margin="0,16,0,8">
                                            <ProgressBar
                                                x:Name="xp_progress_bar"
                                                Minimum="0"
                                                Maximum="100"
                                                Padding="0,0,72,0"
                                                Value="0"
                                                Height="6"
                                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                Background="{ThemeResource CardStrokeColorDefaultBrush}" />
                                            <TextBlock x:Name="LevelProgressTextBlock"
                                                Text="246/375"
                                                FontSize="14"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="0,0,4,0"/>
                                        </Grid>
                                        <Grid Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <TextBlock x:Name="LevelTextBlock" Text="0" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Level" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <TextBlock x:Name="TotalXpTextBlock" Text="0" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="XpTextBlock" Text="Total XP" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                <TextBlock x:Name="TotalGamesPlayedTextBlock" Text="0" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource AccentFillColorDefaultBrush}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Quiz Completed" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <!-- Lives Box -->
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="20"
                                    x:Name="LivesBox"
                                    Padding="20"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    MinWidth="220"
                                    MaxWidth="900"
                                    HorizontalAlignment="Left">
                                    <StackPanel>
                                        <Border Width="900"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <FontIcon Glyph="&#xEB51;" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                            <TextBlock Text="Lives" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                        </StackPanel>
                                        <Grid Margin="0,16,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Width="64" Height="64" Grid.Column="0" VerticalAlignment="Center">
                                                <ProgressRing IsIndeterminate="False" x:Name="LivesProgressBar" Width="64" Height="64" IsActive="True" Value="100" Maximum="100"/>
                                                <TextBlock x:Name="LivesCountTextBlock" Text="30" FontSize="22" Margin="0,0,0,4" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                                <TextBlock x:Name="NextRefillTextBlock" Text="Next +5 in 29:59" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <!-- PRO+ Box -->
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="20"
                                    x:Name="ProPlusBox"
                                    Padding="20"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    MinWidth="220"
                                    MaxWidth="900"
                                    HorizontalAlignment="Left">
                                    <StackPanel>
                                        <Border Width="900"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <FontIcon Glyph="&#xE710;" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                            <TextBlock Text="Get PRO+" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Unlock the full potential of 'Atomic - Periodic Table' with access to all learning games and unlimited lives."
                                                       FontWeight="Normal"
                                                       Margin="4,4,20,4"
                                                       TextWrapping="Wrap"
                                                       FontSize="14"/>
                                            <Button Content="Get PRO Version"
                                                    Click="OpenProPage_Click"
                                                    CornerRadius="8"
                                                    Margin="0,8,0,0"
                                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                                    HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <!-- Achievements Box -->
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="20"
                                    Padding="20"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    MinWidth="220"
                                    MaxWidth="900"
                                    MaxHeight="400"
                                    HorizontalAlignment="Left">
                                    <StackPanel>
                                        <Border Width="900"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <FontIcon Glyph="&#xF272;" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                            <TextBlock Text="Achievements" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" />
                                        </StackPanel>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                            <ItemsControl ItemsSource="{x:Bind Achievements, Mode=OneWay}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="local:Achievement">
                                                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                                CornerRadius="12"
                                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                BorderThickness="1"
                                                                Padding="12"
                                                                Opacity="{x:Bind DisplayOpacity}"
                                                                Margin="0,12,0,0">
                                                            <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                                                <FontIcon Glyph="{x:Bind DisplayIcon}" 
                                                                          FontSize="28" 
                                                                          Foreground="{ThemeResource AccentFillColorDefaultBrush}" 
                                                                          VerticalAlignment="Center"/>
                                                                <StackPanel>
                                                                    <Border Width="600"/>
                                                                    <TextBlock Text="{x:Bind Header}" FontWeight="Bold" FontSize="16"/>
                                                                    <TextBlock Text="{x:Bind Description}" FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                                    <ProgressBar Minimum="0" Maximum="{x:Bind Goal}" Value="{x:Bind Progress}" Height="6" Margin="0,6,0,0" />
                                                                    <TextBlock Text="{x:Bind ProgressText}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    <!-- Categories Card -->
                    <Border x:Name="CategoriesCard"
                        Grid.Column="2"
                        Padding="0,0,0,0"
                        MinWidth="200"
                        CornerRadius="0,0,0,0"
                        MaxWidth="900"
                        HorizontalAlignment="Stretch">
                        <Border>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="CategoryGroupsControl" ItemsSource="{x:Bind CategoryGroups, Mode=OneWay}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="local:FlashCardCategoryGroup">
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                CornerRadius="16"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                Padding="20"
                                                Margin="0,0,0,18">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="0,0,0,12">
                                                        <FontIcon Glyph="{x:Bind Icon}" FontSize="20" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                                                        <TextBlock Text="{x:Bind GroupName}" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                                                        <Border Width="900"/>
                                                    </StackPanel>
                                                    <StackPanel Spacing="8">
                                                        <ItemsControl ItemsSource="{x:Bind Categories}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate x:DataType="local:FlashCardCategory">
                                                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                                            CornerRadius="16"
                                                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                            BorderThickness="1"
                                                                            Padding="12,8"
                                                                            Margin="0,0,0,8">
                                                                        <Grid>
                                                                            <TextBlock Text="{x:Bind Name}" FontSize="16" VerticalAlignment="Center" />
                                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
                                                                                <Border Background="#FFFA5A36" CornerRadius="8" Padding="8,2" Margin="2"
                                                                                        Visibility="{x:Bind ProBadgeVisibility}">
                                                                                    <TextBlock Text="PRO+" Foreground="White" FontWeight="Bold" FontSize="14" TextAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <Button HorizontalAlignment="Right"
                                                                                        VerticalAlignment="Center"
                                                                                        Padding="12,0"
                                                                                        MinWidth="120"
                                                                                        Height="32"
                                                                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                                                        BorderThickness="0"
                                                                                        CornerRadius="6"
                                                                                        FontWeight="SemiBold"
                                                                                        Tag="{x:Bind Name}"
                                                                                        Click="CategoryButton_Click"
                                                                                        IsEnabled="{x:Bind IsUnlocked}">
                                                                                    <TextBlock Text="Start Flashcard >" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                                </Button>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
